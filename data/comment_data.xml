<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data>
    <record id="website_blog_public_user_comment.model_public_comment" model="ir.model">
      <field name="website_form_access">True</field>
      <field name="website_form_label">Send a Public Comment</field>
    </record>
    <function model="ir.model.fields" name="formbuilder_whitelist">
      <value>public.comment</value>
      <value eval="[
        'name',
        'email',
        'content',
        'blog_post_id',
        ]"/>
    </function>
</data>
</odoo>
