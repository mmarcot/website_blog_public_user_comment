<odoo>
<data>
    <template id="opt_blog_post_comment" name="Allow Comments" inherit_id="website_blog.opt_blog_post_comment">
        <xpath expr="//div[@id='o_wblog_post_comments']" position="replace">
            <div id="public_comments">
                <t t-foreach="blog_post.public_comment_ids" t-as="comment">
                    <t t-if="comment.state == 'validated'">
                        <p>
                            <t t-esc="comment.name"/> <t t-esc="comment.email"/><br/>
                            <t t-esc="comment.content"/>
                        </p>
                    </t>
                </t>
            </div>
            <div id="o_wblog_post_comments" t-attf-class="pt-4 o_wblog_read">
                <form id="comment_form" t-ignore="true" action="/website_form/" method="post" data-model_name="public.comment" class="s_website_form container-fluid mt32" enctype="multipart/form-data">
                    <div class="form-group row form-field o_website_form_custom o_website_form_required_custom">
                        <div class="col-lg-3 col-md-4">
                            <label class="col-form-label" for="name">Your Name</label>
                        </div>
                        <div class="col-lg-7 col-md-8">
                            <input type="text" class="form-control o_website_form_input" name="name" required=""/>
                        </div>
                    </div>
                    <div class="form-group row form-field o_website_form_custom">
                        <div class="col-lg-3 col-md-4">
                            <label class="col-form-label" for="email">Email</label>
                        </div>
                        <div class="col-lg-7 col-md-8">
                            <input type="email" class="form-control o_website_form_input" name="email"/>
                        </div>
                    </div>
                    <div class="form-group row form-field o_website_form_custom o_website_form_required_custom">
                        <div class="col-lg-3 col-md-4">
                            <label class="col-form-label" for="content">Comment</label>
                        </div>
                        <div class="col-lg-7 col-md-8">
                            <textarea class="form-control o_website_form_input" name="content" required=""></textarea>
                        </div>
                    </div>
                    <div class="form-group row form-field d-none">
                        <div class="col-lg-3 col-md-4">
                            <label class="col-form-label" for="blog_post_id">Blog post</label>
                        </div>
                        <div class="col-lg-7 col-md-8">
                            <input type="hidden" class="form-control o_website_form_input" name="blog_post_id" t-att-value="blog_post.id"/>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="offset-lg-3 offset-md-4 col-md-8 col-lg-7">
                            <a href="#" class="btn btn-primary btn-lg o_website_form_send">Send</a>
                            <span id="o_website_form_result"></span>
                        </div>
                    </div>
                </form>
            </div>
        </xpath>
    </template>


    <record id="public_comment_tree" model="ir.ui.view">
        <field name="name">public_comment_tree</field>
        <field name="model">public.comment</field>
        <field name="arch" type="xml">
            <tree string="Public comments" default_order="create_date desc">
                <field name="name"/>
                <field name="email"/>
                <field name="content"/>
                <field name="blog_post_id"/>
                <field name="create_date"/>
                <field name="state"/>
                <button name="validate_comment" type="object" string="Validate" class="btn btn-success" attrs="{'invisible':[('state','!=','new')]}"/>
            </tree>
        </field>
    </record>

    <record id="public_comment_search" model="ir.ui.view">
        <field name="name">public_comment_search</field>
        <field name="model">public.comment</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="email"/>
                <field name="content"/>

                <filter name="new_comments" string="New comments" domain="[('state', '=', 'new')]"/>

                <group string="Group By">
                    <filter name="group_by_blog_post" string="Blog post" context="{'group_by': 'blog_post_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_blog_public_comments" model="ir.actions.act_window">
        <field name="name">Public comments</field>
        <field name="res_model">public.comment</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem id="menu_blog_public_comment" parent="website_blog.menu_website_blog_root_global" name="Public comments" action="action_blog_public_comments"/>

</data>
</odoo>