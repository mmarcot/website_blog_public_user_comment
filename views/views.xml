<odoo>
<data>
    <template id="opt_blog_post_comment" name="Allow Comments" inherit_id="website_blog.opt_blog_post_comment">
        <xpath expr="//div[@id='o_wblog_post_comments']" position="replace">
            <hr class="my-5"/>
            <div id="comments_wrapper" class="col-md-8 mx-auto py-3 shadow">
                <div id="public_comments" t-if="len(blog_post.public_comment_ids)">
                    <h2 class="text-center">Comment section</h2>
                    <t t-foreach="blog_post.public_comment_ids" t-as="comment">
                        <div t-if="comment.state == 'validated'" class="my-3">
                            <div>
                                <span class="comment_name" t-field="comment.name"/>
                                <span class="comment_date"><span t-field="comment.create_date"/></span>
                            </div>
                            <span class="comment_content" t-field="comment.content"/>
                        </div>
                        <hr/>
                    </t>
                </div>
                <h2 class="text-center">Leave us a comment</h2>
                <div id="o_wblog_post_comments" t-attf-class="o_wblog_read ml-auto">
                    <form id="comment_form" t-ignore="true" action="/website_form/" method="post" data-model_name="public.comment" class="s_website_form container-fluid mt32" enctype="multipart/form-data">
                        <div class="form-group row form-field o_website_form_custom o_website_form_required_custom">
                            <div class="col-lg-3 col-md-4">
                                <label class="col-form-label" for="name">Your Name</label>
                            </div>
                            <div class="col-lg-7 col-md-8">
                                <input type="text" class="form-control o_website_form_input" name="name" required=""/>
                            </div>
                        </div>
                        <div class="form-group row form-field o_website_form_custom">
                            <div class="col-lg-3 col-md-4">
                                <label class="col-form-label" for="email">Email</label>
                            </div>
                            <div class="col-lg-7 col-md-8">
                                <input type="email" class="form-control o_website_form_input" name="email"/>
                            </div>
                        </div>
                        <div class="form-group row form-field o_website_form_custom o_website_form_required_custom">
                            <div class="col-lg-3 col-md-4">
                                <label class="col-form-label" for="content">Comment</label>
                            </div>
                            <div class="col-lg-7 col-md-8">
                                <textarea class="form-control o_website_form_input" rows="5" name="content" required=""></textarea>
                            </div>
                        </div>
                        <div class="form-group row form-field d-none">
                            <div class="col-lg-3 col-md-4">
                                <label class="col-form-label" for="blog_post_id">Blog post</label>
                            </div>
                            <div class="col-lg-7 col-md-8">
                                <input type="hidden" class="form-control o_website_form_input" name="blog_post_id" t-att-value="blog_post.id"/>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="offset-lg-3 offset-md-4 col-md-8 col-lg-7">
                                <a href="#" class="btn btn-primary btn-lg o_website_form_send">Send</a>
                                <span id="o_website_form_result"></span>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </xpath>
    </template>


    <record id="public_comment_form" model="ir.ui.view">
        <field name="name">public_comment_form</field>
        <field name="model">public.comment</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="button_validate_comment" string="Validate" type="object"
                        class="btn btn-success"
                        attrs="{'invisible': [('state', 'in', ['validated'])]}"/>
                    <button name="button_back_to_new" string="Back to new" type="object"
                        attrs="{'invisible': [('state', 'in', ['new'])]}"/>
                    <button name="button_unlink" type="object" string="Delete comment" 
                        confirm="Do you really want to delete the comment ?" class="btn btn-danger"/>
                    <field name="state" widget="statusbar" statusbar_visible="new,validated"/>
                </header>

                <sheet>
                    <group colspan="4" col="4">
                        <group colspan="2" col="2">
                            <field name="blog_post_id"/>
                            <field name="name"/>
                            <field name="email"/>
                        </group>
                        <group colspan="2" col="2">
                            <field name="create_date"/>
                        </group>
                        <notebook colspan="4">
                            <page string="Comment">
                                <field name="content" nolabel="1"/>
                            </page>
                        </notebook>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="public_comment_tree" model="ir.ui.view">
        <field name="name">public_comment_tree</field>
        <field name="model">public.comment</field>
        <field name="arch" type="xml">
            <tree string="Comments" default_order="create_date desc">
                <field name="name"/>
                <field name="email"/>
                <field name="limited_content" widget="char"/>
                <field name="blog_post_id"/>
                <field name="create_date"/>
                <field name="state"/>
                <button name="button_validate_comment" type="object" string="Validate" class="btn btn-success" attrs="{'invisible':[('state','!=','new')]}"/>
            </tree>
        </field>
    </record>

    <record id="public_comment_search" model="ir.ui.view">
        <field name="name">public_comment_search</field>
        <field name="model">public.comment</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="email"/>
                <field name="content"/>

                <filter name="new_comments" string="New comments" domain="[('state', '=', 'new')]"/>
                <filter name="validated_comments" string="Validated comments" domain="[('state', '=', 'validated')]"/>

                <group string="Group By">
                    <filter name="group_by_blog_post" string="Blog post" context="{'group_by': 'blog_post_id'}"/>
                    <filter name="group_by_state" string="State" context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_blog_public_comments" model="ir.actions.act_window">
        <field name="name">Comments</field>
        <field name="res_model">public.comment</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem id="menu_blog_public_comment" parent="website_blog.menu_website_blog_root_global" name="Comments" action="action_blog_public_comments"/>

</data>
</odoo>